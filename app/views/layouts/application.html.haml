%html
  %head
    %title Doomhub.com
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container#topmost
      .row{ :style => "background-color: #222;"}
        .three.columns
          = user_login_span_tag(current_user)
        .six.columns{ :style => "text-align: center;"}
          = link_to "Go home", root_path
        .three.columns
      .row
        = yield
      .push
    .container#footer
      .row{ :style => "background-color: #222;"}
        .twelve.columns#author
          by ellmo 2011
      